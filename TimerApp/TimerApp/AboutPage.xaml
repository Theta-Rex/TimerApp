<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimerApp.AboutPage"
             Title="About">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to TimerApp!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="Assets/timerlogo.png"/>
            <Label Text="TimerApp allows user to run multiple countdown timers simultaneously. Simply enter the amount of time in seconds, and hit the start button! "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>