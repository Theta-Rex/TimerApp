<ContentPage x:Class="TimerApp.AboutPage"
			 Title="About"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentPage.Content>
		<StackLayout>
			<Label FontSize="Medium"
				   HorizontalOptions="CenterAndExpand"
				   Text="Welcome to TimerApp!"
				   VerticalOptions="CenterAndExpand"/>
			<Image Source="Assets/timerlogo.png"/>
			<Label HorizontalOptions="CenterAndExpand"
				   Text="TimerApp allows users to run multiple countdown timers simultaneously. Simply enter the amount of time in seconds, and hit the start button! "
				   VerticalOptions="CenterAndExpand"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>