<ContentPage x:Class="TimerApp.Views.AboutPage"
			 x:DataType="viewModels:AboutViewModel"
			 Title="{x:Binding Title}"
			 xmlns:viewModels="clr-namespace:TimerApp.ViewModels"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentPage.Content>
		<StackLayout>
			<Label FontSize="Medium"
				   HorizontalOptions="CenterAndExpand"
				   Text="{x:Binding Name}"
				   VerticalOptions="CenterAndExpand"/>
			<Image Source="Assets/timerlogo.png"/>
			<Label HorizontalOptions="CenterAndExpand"
				   Text="TimerApp allows users to run multiple countdown timers simultaneously. Simply enter the amount of time in seconds, and hit the start button! "
				   VerticalOptions="CenterAndExpand"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>