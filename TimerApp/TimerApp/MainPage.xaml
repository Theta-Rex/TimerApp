<ContentPage x:Class="TimerApp.MainPage"
			 x:DataType="timerapp:MainViewModel"
			 xmlns:timerapp="clr-namespace:TimerApp"
			 Title="Timers"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentPage.Content>
		<StackLayout>
            <ListView BackgroundColor="#A3CEF1"
					  ItemsSource="{x:Binding MyTimers}"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
					<DataTemplate x:DataType="timerapp:MyTimer">
						<ViewCell>
                            <Frame BackgroundColor="#80FFFFFF" CornerRadius="20" HasShadow="True" Margin="5">
                                <FlexLayout AlignItems="Center"
											JustifyContent="SpaceBetween"
											Padding="10, 0">
                                    <Entry Keyboard="Numeric"
										   Placeholder="Enter Seconds"
										   Text="{x:Binding EntryTime}"/>
                                    <ImageButton Command="{x:Binding StartTimer}"
												 Source="{x:Binding PlayPauseImage}"/>
                                    <Label FontSize="20"
										   Text="{x:Binding TimeRemaining, StringFormat='{}{0:hh\\:mm\\:ss}'}"/>

                                </FlexLayout>
                            </Frame>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>