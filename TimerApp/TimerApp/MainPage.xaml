<ContentPage x:Class="TimerApp.MainPage"
			 x:DataType="timerapp:MainViewModel"
			 xmlns:timerapp="clr-namespace:TimerApp"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentPage.Content>
		<StackLayout>
			<ListView ItemsSource="{x:Binding MyTimers}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="timerapp:MyTimer">
						<ViewCell>
							<FlexLayout AlignItems="Center"
										JustifyContent="SpaceBetween"
										Padding="20, 0">
								<Entry Keyboard="Numeric"
									   Placeholder="Enter Seconds"
									   Text="{x:Binding EntryTime}"/>
								<Button Command="{x:Binding StartTimer}"
										Text="Start"/>
								<Label FontSize="20"
									   Text="{x:Binding TimeRemaining, StringFormat='{}{0:hh\\:mm\\:ss}'}"/>
							</FlexLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>